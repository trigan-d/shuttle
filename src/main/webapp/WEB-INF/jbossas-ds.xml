<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.jboss.org/ironjacamar/schema
        http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">

	<datasource jta="true" jndi-name="java:jboss/datasources/ShuttleDS"
		pool-name="ShuttleDS_Pool" enabled="true" use-java-context="true"
		use-ccm="true">
		<connection-url>jdbc:postgresql://localhost:5432/shuttle_dev</connection-url>
		<driver>postgresql-9.1-901.jdbc4.jar</driver>
		<security>
			<user-name>postgres</user-name>
			<password>pass</password>
		</security>
	</datasource>

</datasources>